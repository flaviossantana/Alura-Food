<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/dados_pagamento_titulo_valor_da_compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Valor da compra: "
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dados_pagamento_valor"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="R$ 230,00"
        android:textColor="@android:color/holo_green_dark"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dados_pagamento_titulo_valor_da_compra" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dados_pagamento_numero_cartao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Número do cartão"
        app:layout_constraintEnd_toEndOf="@id/dados_pagamento_valor"
        app:layout_constraintStart_toStartOf="@+id/dados_pagamento_valor"
        app:layout_constraintTop_toBottomOf="@id/dados_pagamento_valor">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLength="15"
            android:digits="@string/numeros_com_espaco"
            android:inputType="number"
            tools:drawableEnd="@drawable/ic_visa"
            tools:drawableRight="@drawable/ic_visa" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dados_pagamento_mes_e_ano"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:hint="MM/AA"
        app:layout_constraintStart_toStartOf="@+id/dados_pagamento_numero_cartao"
        app:layout_constraintTop_toBottomOf="@+id/dados_pagamento_numero_cartao">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/numeros_com_barra"
            android:inputType="number"
            android:maxLength="5" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dados_pagamento_cvc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="CVC"
        android:minWidth="45dp"
        app:layout_constraintEnd_toEndOf="@+id/dados_pagamento_numero_cartao"
        app:layout_constraintTop_toBottomOf="@+id/dados_pagamento_numero_cartao">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="4" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dados_pagamento_nome_no_cartao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nome no cartão"
        app:layout_constraintEnd_toEndOf="@+id/dados_pagamento_numero_cartao"
        app:layout_constraintStart_toStartOf="@id/dados_pagamento_numero_cartao"
        app:layout_constraintTop_toBottomOf="@+id/dados_pagamento_mes_e_ano">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/letras_maiusculas_minusculas_com_espaco_em_branco"
            android:maxLength="50" />
    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>