<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/formulario_cadastro_titulo_dados_pessoais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_adiciona_pessoa"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_adiciona_pessoa"
        android:text="@string/dados_pessoais"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dados_pessoais_nome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@id/formulario_cadastro_titulo_dados_pessoais"
        app:layout_constraintStart_toStartOf="@id/formulario_cadastro_titulo_dados_pessoais"
        app:layout_constraintTop_toBottomOf="@id/formulario_cadastro_titulo_dados_pessoais">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/letras_maiusculas_minusculas_com_espaco_em_branco"
            android:hint="@string/nome_completo"
            android:inputType="text" />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/dados_pessoais_cpf"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/dados_pessoais_nome"
        app:layout_constraintStart_toStartOf="@id/dados_pessoais_nome"
        app:layout_constraintTop_toBottomOf="@id/dados_pessoais_nome">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/numeros"
            android:hint="@string/cpf"
            android:inputType="number"
            android:maxLength="11" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dados_pessoais_telefone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/dados_pessoais_cpf"
        app:layout_constraintStart_toStartOf="@id/dados_pessoais_cpf"
        app:layout_constraintTop_toBottomOf="@id/dados_pessoais_cpf">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:digits="@string/numeros"
            android:hint="@string/telefone_com_ddd"
            android:inputType="phone"
            android:maxLength="11" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dados_pessoais_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/dados_pessoais_telefone"
        app:layout_constraintStart_toStartOf="@id/dados_pessoais_telefone"
        app:layout_constraintTop_toBottomOf="@id/dados_pessoais_telefone">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email"
            android:inputType="textEmailAddress"
            android:maxLength="100" />

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/dados_pessoais_senha"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@id/dados_pessoais_email"
        app:layout_constraintStart_toStartOf="@id/dados_pessoais_email"
        app:layout_constraintTop_toBottomOf="@id/dados_pessoais_email"
        app:passwordToggleEnabled="true">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/senha"
            android:inputType="textPassword" />

    </android.support.design.widget.TextInputLayout>

</android.support.constraint.ConstraintLayout>