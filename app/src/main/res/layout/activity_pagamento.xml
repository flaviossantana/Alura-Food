<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dados_pagamento_titulo_valor_da_compra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/valor_da_compra"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dados_pagamento_valor"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="R$ 230,00"
            android:textColor="@android:color/holo_green_dark"
            android:textSize="28sp"
            app:layout_constraintEnd_toEndOf="@id/dados_pagamento_titulo_valor_da_compra"
            app:layout_constraintStart_toStartOf="@id/dados_pagamento_titulo_valor_da_compra"
            app:layout_constraintTop_toBottomOf="@+id/dados_pagamento_titulo_valor_da_compra" />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/dados_pagamento_numero_cartao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/dados_pagamento_valor"
            app:layout_constraintStart_toStartOf="@+id/dados_pagamento_valor"
            app:layout_constraintTop_toBottomOf="@id/dados_pagamento_valor"
            app:layout_constraintVertical_bias="0.0">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/numero_do_cartao"
                android:imeOptions="actionNext"
                android:inputType="number"
                android:maxLength="16"
                tools:drawableEnd="@drawable/ic_visa"
                tools:drawableRight="@drawable/ic_visa" />
        </android.support.design.widget.TextInputLayout>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/pagamento_mes_ano_cvc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@id/dados_pagamento_numero_cartao"
            app:layout_constraintStart_toStartOf="@id/dados_pagamento_numero_cartao"
            app:layout_constraintTop_toBottomOf="@id/dados_pagamento_numero_cartao">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/dados_pagamento_mes"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/mm"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="2" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/dados_pagamento_ano"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@id/dados_pagamento_mes"
                app:layout_constraintTop_toTopOf="@+id/dados_pagamento_mes">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/aa"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="2" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/dados_pagamento_cvc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minWidth="120dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <android.support.design.widget.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableEnd="@drawable/ic_cvc_cartao_de_credito"
                    android:drawableRight="@drawable/ic_cvc_cartao_de_credito"
                    android:hint="@string/cvc"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLength="4" />

            </android.support.design.widget.TextInputLayout>


        </android.support.constraint.ConstraintLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/dados_pagamento_nome_no_cartao"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="@+id/dados_pagamento_numero_cartao"
            app:layout_constraintStart_toStartOf="@id/dados_pagamento_numero_cartao"
            app:layout_constraintTop_toBottomOf="@+id/pagamento_mes_ano_cvc">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/nome_no_cartao"
                android:imeOptions="actionGo"
                android:inputType="textCapWords"
                android:maxLength="50" />
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/pagamento_botao_finaliza_compra"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/finalizar_compra"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/dados_pagamento_numero_cartao"
            app:layout_constraintStart_toStartOf="@id/dados_pagamento_numero_cartao"
            app:layout_constraintTop_toBottomOf="@id/dados_pagamento_nome_no_cartao" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>